<Window x:Class="PieChart_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PieChart_test"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>

        <lvc:PieChart x:Name="mainPieChart"
                      LegendLocation="Bottom">

        </lvc:PieChart>

        <StackPanel>
            <Label Content="{Binding MyChartValues[1]}" />
            <Label Content="{Binding MyChartValues[2]}" />
            <Label Content="{Binding MyChartValues[3]}" />
        </StackPanel>

    </Grid>
</Window>
